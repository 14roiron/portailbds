{% extends "BDSCoreBundle::layout.html.twig" %}

{% block title %}
	Evenements de {{ domaine.nom }}
{% endblock %}

{% block body %}
<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title"><h2>Evenements de {{ domaine.nom }}</h2></div>
	</div>
	<div class="panel-body">
		<a class="btn btn-success btn-block" href="{{ path('bds_evenement_add', {'nom': domaine.nom}) }}">Ajouter</a>
		<hr>
		<table class="table table-stiped table-bordered table-hover col-lg-12">
			<tbody>
				{% for event in listEvents %}
				<tr>
					<td>
						<p><a href="{{ path('bds_evenement_view', {'nom': domaine.nom, 'id':event.id}) }}">{{ event.nom }}</a></p>
					</td>
					<td>
						<div class="btn-group">
							<a class="btn btn-danger" href="{{ path('bds_evenement_delete', {'nom': domaine.nom, 'id': event.id}) }}"><span class="glyphicon glyphicon-trash"/> Supprimer</a>
							<a class="btn btn-warning" href="{{ path('bds_evenement_edit', {'nom': domaine.nom, 'id': event.id}) }}"><span class="glyphicon glyphicon-pencil"/> Editer</a>
							<a class="btn btn-info" href="{{ path('bds_evenement_feuille', {'nom': domaine.nom, 'id': event.id}) }}"><span class="glyphicon glyphicon-eye-open"/> Voir Compo</a>
							<a class="btn btn-primary" href="{{ path('bds_evenement_edit', {'nom': domaine.nom, 'id': event.id}) }}"><span class="glyphicon glyphicon-pencil"/> Editer Compo</a>
						</div>
					</td>
				</tr>
				{%  else %}
				<tr>
					<th>
						<p> Si vous voulez faire des choses ensemble il va falloir penser à creer des évènements !</p>
					</th>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>


{% endblock %}