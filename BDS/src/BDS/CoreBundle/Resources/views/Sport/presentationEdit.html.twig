{% extends "BDSCoreBundle:Sport:layout.html.twig" %}

{% block title %}
  Ajouter - {{ parent() }}
{% endblock %}

{% block bds_sport_body %}
<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title"><h2>ajouter une presentation</h2></div>
	</div>
	<div class="panel-body">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
	{{ form_errors(form) }}
	
	{{ form_label(form.urlVideo, "url de la video de pr√©sentation : ", {'label_attr': {'class':'control-label'}}) }}
	<div class="input-group">
		<span class="input-group-addon" id="basic-addon3">https://www.youtube.com/embed/...</span>
		{{ form_widget(form.urlVideo, {'attr': {'class': 'form-control', 'aria-describedby':'basic-addon3'}}) }}
	</div>
	
	<div class="col-lg-12 embed-responsive embed-responsive-16by9" id="video">
	</div>
	
	{#{{ form_label(form.presentation, "Presentation : ", {'label_attr': {'class':'control-label'}}) }}
	{{ form_widget(form.presentation, {'attr': {'class': ''}}) }}#}
	
	{{ form_rest(form) }}
	<hr>
	
	<button type="submit" class="btn btn-primary btn-block">editer</button>
	
	{{ form_end(form) }}
	 
	</div>
</div>
 {{ tinymce_init({ 'theme': {'simple': {'menubar': false}}}) }}
{% endblock %}

{% block javascripts %}

{{ parent() }}

<script type="text/javascript" src="{{ asset('js/loadVideo.js') }}"></script>

{% endblock %}
