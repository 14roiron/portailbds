{%  extends "BDSCoreBundle:Sport:layout.html.twig" %}

{% block title %}
	{{ domaine.nom }} presentation - {{ parent() }}
{% endblock %}

{% block bds_sport_body %}
<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">presentation de {{ domaine.nom }}</h3>
	</div>
	<div class="panel-body">
		<div class="col-lg-12">
			{% if domaine.urlVideo %}
					<iframe width="100%"height="350" src="{{ domaine.urlVideo }}" frameborder="0" allowfullscreen></iframe>
			{% endif %}
		</div>
		{% if domaine.presentation %}
			<p>{{ domaine.presentation |  raw}}</p>
			<p><b>{{ domaine.capitaine.username }}</b></p>
		{% else %}
			<p> pas encore de présentation pour {{ domaine.nom }} mais cela sera fait rapidement !!</p>
			<a class="btn btn-lg btn-default" href="{{ path('bds_sport_presentation_edit', {'domaine': domaine.nom}) }}">creer une présentation</a>
		{% endif %}
	</div>
</div>

{# à sécuriser #}
<a class="btn btn-lg btn-default" href="{{ path('bds_sport_presentation_edit', {'domaine': domaine.nom}) }}">editer la présentation</a>
{% endblock %}