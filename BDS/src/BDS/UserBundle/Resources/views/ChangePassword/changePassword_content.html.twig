{% trans_default_domain 'FOSUserBundle' %}

{% extends "BDSCoreBundle::layout.html.twig" %}

{% block body %}

<div class="col-lg-12">
	<div class="col-lg-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<p class="panel-title">Paramettres Personels</p>
				</div>
				<div class="panel-body">
					<table class="table table-hover">
						<tbody>
							<tr>
								<td><a href="{{ path('fos_user_profile_edit') }}">Profile</a></td>
							</tr>
							<tr class="info">
								<td><a href="#">Sécurité</a></td>
							</tr>
							{% for membre in app.user.membres %}
								<tr>
									<td><a href="#">{{ membre.sport.nom }}</a></td>
								</tr>
							{% endfor %}
							<tr>
								<td><a href="{{ path('bds_user_sport_add') }}">Ajouter un sport</a></td>
							</tr>
							<tr>
								<td><a href="{{ path('fos_user_profile_show') }}">Retour</a></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
	</div>

	<div class="col-lg-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				<p class="panel-title">Modifier mot de passe</p>
			</div>
			<div class="panel-body">
				<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
  				
				{# Les erreurs générales du formulaire. #}
	    		{{ form_errors(form) }}

      			{{ form_label(form.current_password, "Mot de passe actuel : ", {'label_attr': {'class': 'control-label'}}) }}
   				{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
 
				{{ form_label(form.plainPassword.first, "nouveau mot de passe : ", {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}

				{{ form_label(form.plainPassword.second, "Répeter le nouveau mot de passe : ", {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}

  				{{ form_rest(form) }}
  				<hr>
  				
   				<input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="sauvegarder" />
   				
   				</form>	
			</div>
		</div>
	</div>
</div>

{% endblock %}
