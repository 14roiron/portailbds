{% extends "BDSCoreBundle::layout.html.twig" %}

{% block body %}

<div class="col-lg-12">
	<div class="col-lg-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<p class="panel-title">Paramettres Personels</p>
				</div>
				<div class="panel-body">
					<table class="table table-hover">
						<tbody>
							<tr class="info">
								<td><a href="{{ path('fos_user_profile_edit') }}">Profile</a></td>
							</tr>
							<tr>
								<td><a href="{{ path('fos_user_change_password') }}">Sécurité</a></td>
							</tr>
							{% for membre in app.user.membres %}
								<tr>
									<td><a href="#">{{ membre.sport.nom }}</a></td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
	</div>

	<div class="col-lg-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				<p class="panel-title">modifier la photo de profil</p>
			</div>
			<div class="panel-body">
				<div class="col-lg-12">
					<div class="col-lg-3">
						{{ render(controller('BDSUserBundle:Security:profilePic', {'username':app.user.username, 'size':250})) }}
					</div>
					<div class="col-lg-9">
						{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
						{{ form_errors(form) }}
						
						{{ form_label(form.profilePic, "Photo de profil : ", {'label_attr': {'class': 'control-label'}}) }}
						{{ form_widget(form.profilePic.file, {'attr': {'class': 'file', 'data-preview-file-type':'text'}}) }}
						
						{{ form_rest(form) }}
						<hr>
						<button type="submit" class="btn btn-primary btn-block">Modifier</button>
						
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}

{% block javascripts %}

{{ parent() }}

<script type="text/javascript" src="{{ asset('js/fileInputOption.js') }}"></script>

{% endblock %}
