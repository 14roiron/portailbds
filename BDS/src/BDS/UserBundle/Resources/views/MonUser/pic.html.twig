{% extends "BDSCoreBundle::layout.html.twig" %}

{% block body %}

<div class="col-lg-12">
	<div class="col-lg-3">
			<div class="panel panel-default">
				<div class="panel-heading">
					<p class="panel-title">Paramettres Personels</p>
				</div>
				<div class="panel-body">
					<table class="table table-hover">
						<tbody>
							<tr class="info">
								<td><a href="{{ path('fos_user_profile_edit') }}">Profile</a></td>
							</tr>
							<tr>
								<td><a href="{{ path('fos_user_change_password') }}">Sécurité</a></td>
							</tr>
							{% for membre in app.user.membres %}
								<tr>
									<td><a href="#">{{ membre.sport.nom }}</a></td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
	</div>

	<div class="col-lg-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				<p class="panel-title">modifier la photo de profil</p>
			</div>
			<div class="panel-body">
				<div class="col-lg-12">
					<div class="col-lg-3">
						{{ render(controller('BDSUserBundle:Security:profilePic', {'username':app.user.username, 'size':250})) }}
					</div>
					<div>
						{{ form(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}

