<div class="row">
	<div class="col-lg-6"><h1>{{ now|strftime('%B') }} <small>S{{ now|strftime('%U') }}</small></h1></div>
	<div class="col-lg-6 text-right">
		<div class="col-lg-12">
			<div class="btn-group" role="group">
  				<button type="button" class="btn btn-default" id="button_{{ lundiPrec.timestamp }}"><span class="glyphicon glyphicon-chevron-left"/></button>
  				<button type="button" class="btn btn-default" id="button_{{ now.timestamp }}">Aujourd'hui</button>
  				<button type="button" class="btn btn-default" id="button_{{ lundiSui.timestamp }}"><span class="glyphicon glyphicon-chevron-right"/></button>
			</div>
		</div>
	</div>
</div>
<div class="col-lg-12">
	<table class="col-lg-12 table table-hover">
		<tbody>
			<tr>
				<td style="width: 40px;"></td>
				{% for jourSemaine in joursSemaine %}
				<td>
					<h3>{{ jourSemaine|strftime('%a') }}
						{% if jourSemaine|date('d/m/Y') == now|date('d/m/Y') %}
							<span  class="badge">
						{% else %}
							<span class="">
						{% endif %}
							{{ jourSemaine|strftime('%e') }}
						</span>
					</h3>
				</td>
				{% endfor %}
			</tr>
		</tbody>
	</table>
</div>