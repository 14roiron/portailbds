{% extends "BDSCoreBundle::layout.html.twig" %}

{% block title %}
	calendrier {{ domaine.nom }}
{% endblock %}

{% block body %}

<div class="col-lg-2">
	<div class="row">
		<div class="">{{ date|strftime('%b') }}</div>
		<div> {{ now|date("%B") }}</div>
	</div>
</div>
<div class="col-lg-10">
	<div class="row">
		<div class="">{{ date|strftime('%B') }} Semaine : {{ date|strftime('%U') }}</div>
		<div class="">
			<div class="btn-group" role="group">
  				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"/></button>
  				<button type="button" class="btn btn-default">Aujourd'hui</button>
  				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-chevron-right"/></button>
			</div>
		</div>
	</div>
	<div class="">
		<table>
			<tbody>
				<tr>
					<td style="width: 30px;"></td>
					{{ for dateAffichee in datesAffichees }}
					<td>
						{{ dateAffichee|strftime('%b %e') }}
					</td>
					{{ endfor }}
				</tr>
			</tbody>
		</table>
		<div style="overflow-y: scroll; height: 913px;">
			<table>
				
			</table>
		</div>
	</div>
</div>

{% endblock %}
