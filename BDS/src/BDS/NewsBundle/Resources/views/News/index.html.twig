{% extends "BDSNewsBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}


{% block bdsnews_body %}
<div class="panel panel-default">
	<div class="panel-heading"><h2>Liste des news</h2></div>
  		<div class="panel-body">
  			<div class="row">
	    		{% for news in listNews %}
	    			{% if loop.index0 is divisible by(3) %}
	    	</div>
			<div class="row">
					{% endif %}
				<div class="col-lg-4">
	      		<div class="thumbnail">
	      			{# Ã  terme j'aimerai que ce soit le logo de la news #}
	      			<img src="{{ asset(domaine.logo.getWebPath) }}">
	      			<div class="caption">
	        			<h3><a href="{{ path('bds_news_view', {'id': news.id, 'sport': domaine.nom}) }}">{{ news.titre }}</a></h3>
	        			<p><strong>par <em>{{ news.auteur.username }}</em>, le {{ news.datePublication|date('d/m/Y') }}</strong></p>
						<p>{{news.contenu|slice(0,150)|raw}}</p>
	   					<p><em>{{ news.commentaires|length }} commentaires</em></p>
	      			</div>
	      		</div>
	      		</div>
	    		{% else %}
	      		<div>Pas (encore !) de news</div>
	    		{% endfor %}
 		 	</div>
 		 </div>
 </div>
{% endblock %}

{% block aside %}
{{ parent() }}
<hr>
 <a class="btn btn-lg btn-success" href="{{ path('bds_news_add', {'sport': domaine.nom}) }}">ajouter une news</a>

{% endblock %}
