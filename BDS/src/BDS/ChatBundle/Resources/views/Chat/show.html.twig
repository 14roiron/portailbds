<div id="channel_{{ channel }}" class="panel panel-default">
	<div class="panel-heading">
		<p class="panel-title"><span class="glyphicon glyphicon-comment"/> Chat</p>
	</div>
	<div class="panel-body">
		{% render(controller('BDSChatBundle:Chat:list', {'channel': channel})) %}
	</div>
	<div class="panel-footer">
		<form id="chatForm" action="{{ path('bds_chat_post', {'channel': channel}) }}" method="post">
    		<div class="input-group">
    			<input type="text" name="message" id="chatMessage" class="form-control" placeholder="votre message..."/>
    			<span class="input-group-btn">
   	    			<input class="btn btn-success" type="submit" value="poster" />
   	    		</span>
    		</div>
		</form>
	</div>
</div>

<script type="text/javascript">
	var updateInterval = {{ updateInterval }};
	
</script>
